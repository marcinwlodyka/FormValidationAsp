@using static WebApplication1.Models.Account;
@model WebApplication1.Models.Account
@{
    ViewData["Title"] = "Index";
}

<h1>Account</h1>

<form asp-controller="Account" asp-action="Register" method="post" class="d-flex flex-column gap-2 align-items-start">
    <div asp-validation-summary="All"></div>

    <div class="d-flex gap-2 align-items-center">
        <label asp-for="FirstName">Imię:</label>

        <input asp-for="FirstName" data-input-clear />
    </div>

    <div class="d-flex gap-2 align-items-center">
        <label asp-for="Surname">Nazwisko:</label>

        <input asp-for="Surname" data-input-clear />
    </div>

    <div class="d-flex gap-2 align-items-center">
        <label asp-for="Email">Email:</label>

        <input asp-for="Email" data-input-clear />
    </div>

    <div class="d-flex gap-2 align-items-center">
        <label asp-for="Password">Hasło:</label>

        <input asp-for="Password" data-input-clear />
    </div>

    <div class="d-flex gap-2 align-items-center">
        <label asp-for="ConfirmPassword">Powtórz hasło:</label>

        <input asp-for="ConfirmPassword" data-input-clear />
    </div>

    <div class="d-flex gap-2 align-items-center">
        <label asp-for="PhoneNumber">Numer telefonu:</label>

        <input asp-for="PhoneNumber" data-input-clear />
    </div>

    <div class="d-flex gap-2 align-items-center">
        <label asp-for="Age">Wiek:</label>

        <input asp-for="Age" data-input-clear />
    </div>

    <div class="d-flex gap-2 align-items-center">
        <label asp-for="City">Miasto:</label>

        <select asp-for="City" asp-items="Html.GetEnumSelectList<CityEnum>()" data-select-clear></select>
    </div>

    <input type="submit" value="Zarejestruj się" class="btn btn-primary" />
</form>

<button class="btn btn-danger mt-2" data-clear-btn>Wyczyść</button>

<script>
const clearBtn = document.querySelector('[data-clear-btn]')
const inputs = document.querySelectorAll('[data-input-clear]')
const select = document.querySelector('[data-select-clear]')

clearBtn?.addEventListener('click', () => {
    inputs.forEach(input => {
        input.value = ''
    })
    select.value = 0;
})
</script>
